<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue_gradient"
    tools:context=".SignInActivity">

    <View
        android:id="@+id/signin_header"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.375"
        android:background="@drawable/bg_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/signin_logo_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/singnin_logo_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/signin_logo_right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"/>

    <ImageView
        android:id="@+id/signin_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="3:1"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="@id/signin_logo_left_guideline"
        app:layout_constraintEnd_toEndOf="@id/signin_logo_right_guideline"
        app:layout_constraintTop_toTopOf="@id/singnin_logo_top_guideline"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/singnin_welcome_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.22"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/singnin_welcome_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.27"/>

    <TextView
        android:id="@+id/signin_welcome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:text="Welcome Back!"
        android:autoSizeTextType="uniform"
        android:textColor="#4C3219"
        app:layout_constraintEnd_toEndOf="@id/signin_logo_right_guideline"
        app:layout_constraintStart_toStartOf="@id/signin_logo_left_guideline"
        app:layout_constraintTop_toBottomOf="@id/singnin_welcome_top_guideline"
        app:layout_constraintBottom_toTopOf="@id/singnin_welcome_bottom_guideline"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/singnin_text_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/singnin_text_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.34"/>

    <TextView
        android:id="@+id/signin_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Sign in to your IEEE account"
        android:textColor="#836A53"
        android:textAlignment="center"
        android:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@id/signin_logo_right_guideline"
        app:layout_constraintStart_toStartOf="@id/signin_logo_left_guideline"
        app:layout_constraintTop_toBottomOf="@id/singnin_text_top_guideline"
        app:layout_constraintBottom_toTopOf="@id/singnin_text_bottom_guideline"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/signin_login_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/signin_login_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.44"/>

    <TextView
        android:id="@+id/signin_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="LOGIN"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="@id/signin_logo_left_guideline"
        app:layout_constraintTop_toBottomOf="@id/signin_login_top_guideline"
        app:layout_constraintEnd_toEndOf="@id/signin_logo_right_guideline"
        app:layout_constraintBottom_toTopOf="@id/signin_login_bottom_guideline"/>

    <EditText
        android:id="@+id/signin_edit_id"
        android:hint="Email"
        android:paddingLeft="16dp"
        android:textColorHint="#60000000"
        android:textColor="#000000"
        android:textStyle="italic"
        android:background="@drawable/bg_input"
        android:layout_width="0dp"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintHeight_max="50dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@id/signin_logo_right_guideline"
        app:layout_constraintStart_toStartOf="@id/signin_logo_left_guideline"
        app:layout_constraintTop_toBottomOf="@id/signin_login_bottom_guideline"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/signin_password_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55"/>

    <EditText
        android:id="@+id/signin_edit_password"
        android:hint="Password"
        android:paddingLeft="16dp"
        app:layout_constraintHeight_percent="0.07"
        android:textColorHint="#60000000"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:textStyle="italic"
        android:background="@drawable/bg_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_max="50dp"
        app:layout_constraintEnd_toEndOf="@id/signin_logo_right_guideline"
        app:layout_constraintStart_toStartOf="@id/signin_logo_left_guideline"
        app:layout_constraintTop_toBottomOf="@id/signin_password_top_guideline"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/signin_btn_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.64"/>

    <Button
        android:id="@+id/signin_btn_signin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Sign In"
        android:autoSizeTextType="uniform"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:padding="8dp"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintHeight_max="50dp"
        android:background="@drawable/bg_btn_primary"
        app:layout_constraintEnd_toEndOf="@id/signin_logo_right_guideline"
        app:layout_constraintStart_toStartOf="@id/signin_logo_left_guideline"
        app:layout_constraintTop_toBottomOf="@id/signin_btn_top_guideline"/>

    <View
        android:id="@+id/signin_register_space"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/signin_btn_signin"
        app:layout_constraintStart_toStartOf="@id/signin_logo_left_guideline"
        app:layout_constraintEnd_toEndOf="@id/signin_logo_right_guideline"
        app:layout_constraintHeight_percent="0.03"/>

    <TextView
        android:id="@+id/signin_register"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:text="Not a Member? Click Here "
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@id/signin_logo_right_guideline"
        app:layout_constraintStart_toStartOf="@id/signin_logo_left_guideline"
        app:layout_constraintTop_toBottomOf="@id/signin_register_space"
        app:layout_constraintHeight_percent="0.035"
        android:textAlignment="center"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/signin_forgot_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"/>

    <TextView
        android:id="@+id/signin_forgot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Forgot Password"
        android:textStyle="bold"
        android:textAlignment="center"
        android:autoSizeTextType="uniform"
        android:textColor="#FFFFFF"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHeight_percent="0.037"
        app:layout_constraintEnd_toEndOf="@id/signin_logo_right_guideline"
        app:layout_constraintStart_toStartOf="@id/signin_logo_left_guideline"
        app:layout_constraintTop_toBottomOf="@id/signin_forgot_top_guideline"/>

</android.support.constraint.ConstraintLayout>