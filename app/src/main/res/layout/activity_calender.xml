        <!--android:layout_marginTop="10dp"-->
        <!--app:layout_constraintTop_toBottomOf="@id/calendar_title">-->
        
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/calendar_list_recycler"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calendar_title"/>

    <!--</android.support.v4.widget.NestedScrollView>-->

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/calendar_empty"
        android:text="No Events to Show"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@id/calendar_list_recycler"
        app:layout_constraintEnd_toEndOf="@id/calendar_list_recycler"
        app:layout_constraintTop_toTopOf="@id/calendar_list_recycler"
        app:layout_constraintBottom_toBottomOf="@id/calendar_list_recycler"
        android:gravity="center"
        android:textSize="15sp"/>

</android.support.constraint.ConstraintLayout>