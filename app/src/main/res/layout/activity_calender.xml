<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalendarActivity"
    android:background="#A76A0D">

    <!--<CalendarView-->
        <!--android:id="@+id/calender"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="335dp"-->
        <!--android:minDate="01/01/2019"-->
        <!--android:theme="@style/CalendarTheme"/>-->

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minDate="01/01/2019"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.51"
        app:layout_constraintHeight_max="335dp"
        android:theme="@style/CalendarTheme"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeMaxTextSize="20sp"
        android:textColor="#FFFFFF"
        android:text="21 JUN, 2019"
        android:id="@+id/calendar_title"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintTop_toBottomOf="@id/calendar"/>

    <!--<android.support.v4.widget.NestedScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:id="@+id/calendar_list_scroll"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--android:layout_marginTop="10dp"-->
        <!--app:layout_constraintTop_toBottomOf="@id/calendar_title">-->
        
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/calendar_list_recycler"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calendar_title"/>

    <!--</android.support.v4.widget.NestedScrollView>-->

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/calendar_empty"
        android:text="No Events to Show"
        app:layout_constraintStart_toStartOf="@id/calendar_list_recycler"
        app:layout_constraintEnd_toEndOf="@id/calendar_list_recycler"
        app:layout_constraintTop_toTopOf="@id/calendar_list_recycler"
        app:layout_constraintBottom_toBottomOf="@id/calendar_list_recycler"
        android:gravity="center"
        android:textSize="15sp"/>

</android.support.constraint.ConstraintLayout>