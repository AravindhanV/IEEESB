<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F5F7">

    <LinearLayout
        android:id="@+id/scrollcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upcoming Workshops"
            android:fontFamily="@font/new_rocker"
            android:textSize="25sp"
            android:paddingHorizontal="10dp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stay Tuned for More Workshops"
            android:textColor="#000000"
            android:gravity="center"
            android:padding="30dp"
            android:id="@+id/workshop_empty_label_upcoming"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/workshop_recycler"
            android:background="#F3F5F7"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Past Workshops"
            android:paddingHorizontal="10dp"
            android:textSize="25sp"
            android:fontFamily="@font/new_rocker"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Past Workshops"
            android:textColor="#000000"
            android:gravity="center"
            android:padding="30dp"
            android:id="@+id/workshop_empty_label_past"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/workshop_recycler1"
            android:background="#F3F5F7"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>