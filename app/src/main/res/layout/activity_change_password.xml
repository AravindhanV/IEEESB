<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#156387">
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="30dp"
    tools:context=".RegistrationActivity">

    <TextView
        android:id="@+id/change_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE PASSWORD"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/change_email"
        android:hint="Email"
        android:paddingLeft="16dp"
        android:textColorHint="#60000000"
        android:inputType="textEmailAddress"
        android:textStyle="italic"
        android:background="@drawable/bg_input"
        android:layout_width="0dp"
        android:textColor="#000000"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_title"/>

    <EditText
        android:id="@+id/change_current"
        android:hint="Current Password"
        android:paddingLeft="16dp"
        android:textColorHint="#60000000"
        android:inputType="textPassword"
        android:textStyle="italic"
        android:background="@drawable/bg_input"
        android:layout_width="0dp"
        android:textColor="#000000"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_email"/>

    <EditText
        android:id="@+id/change_new"
        android:hint="New Password"
        android:paddingLeft="16dp"
        android:textColorHint="#60000000"
        android:inputType="textPassword"
        android:textStyle="italic"
        android:background="@drawable/bg_input"
        android:layout_width="0dp"
        android:textColor="#000000"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_current"/>

    <EditText
        android:id="@+id/change_new_confirm"
        android:hint="Confirm Password"
        android:paddingLeft="16dp"
        android:textColorHint="#60000000"
        android:inputType="textPassword"
        android:textStyle="italic"
        android:background="@drawable/bg_input"
        android:layout_width="0dp"
        android:textColor="#000000"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_new"/>

    <Button
        android:id="@+id/change_btn_change"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="36dp"
        android:text="Change Password"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_btn_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_new_confirm"/>

</android.support.constraint.ConstraintLayout>
</ScrollView>