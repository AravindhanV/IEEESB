<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ieee_sb">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/launch_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/launch_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".EventRegistrationActivity"></activity>
        <activity
            android:name=".ChangePasswordActivity"
            android:theme="@style/ChangePasswordTheme" />
        <activity
            android:name=".GalleryFullScreen"
            android:screenOrientation="portrait"
            android:theme="@style/GalleryFullScreenTheme" />
        <activity
            android:name=".GalleryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/GalleryTheme" />
        <activity
            android:name=".TeamActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TeamTheme" />
        <activity
            android:name=".CalendarActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CalendarPageTheme" />
        <activity
            android:name=".DetailPopUpActivityEvents"
            android:parentActivityName=".HomeRootActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".DetailPopUpActivityWorkshops"
            android:parentActivityName=".HomeRootActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".HomeRootActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HomeTheme" />
        <activity
            android:name=".EmailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OTPActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RegistrationMethodActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RegistrationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HomeTheme" />
        <activity
            android:name=".ForgotPasswordActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignInActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>